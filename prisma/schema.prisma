generator client {
  provider = "prisma-client-js"
  previewFeatures = ["metrics"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id         Int         @id @default(autoincrement())
  orderId    String      @unique 
  userId     Int
  totalAmt   Decimal     @db.Decimal(6, 2)
  created_at DateTime    @default(now())
  updated_at DateTime?
  User       User        @relation(fields: [userId], references: [id])
  OrderItem  OrderItem[]
  @@index([userId], map: "Order_userId_fkey")
}

model OrderItem {
  id         Int       @id @default(autoincrement())
  amount     Decimal   @db.Decimal(6, 2)
  orderId    String    
  qty        Int
  created_at DateTime  @default(now())
  updated_at DateTime?
  prod_id  String
  Order      Order     @relation(fields: [orderId], references: [orderId])
  Product    Product   @relation(fields: [prod_id], references: [prod_id])
  @@index([orderId], map: "OrderItem_orderId_fkey")
  @@index([prod_id], map: "OrderItem_prod_id_fkey")
}

model Product {
  id          Int         @id @default(autoincrement())
  prod_id     String      @unique
  name        String?
  price       Decimal     @db.Decimal(6, 2)
  brand       String?
  created_at  DateTime    @default(now())
  updated_at  DateTime?
  category    String?
  image       String?
  description String?
  qty        Int
  OrderItem   OrderItem[]
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  name        String
  created_at  DateTime  @default(now())
  is_approved Boolean   @default(false)
  password    String
  confirmpassword   String
  role        User_role @default(USER)
  updated_at  DateTime?
  Order       Order[]
}

model Category {
  id      Int 
  name    String    @unique
  description   String?
  created_at  DateTime  @default(now())
  updated_at  DateTime?

}


model Appointment{
  id       Int       @id @default(autoincrement())
  name     String    @unique 
  email    String    @unique
  number   String
  Date     String
  created_at   DateTime  @default(now())  
  message  String
  updated_at  DateTime? 
}

enum User_role {
  USER
  ADMIN
}
